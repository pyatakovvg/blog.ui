{
  "presets": [
    "babel-preset-mobx",
    "@babel/preset-react",
    "@babel/preset-typescript"
  ],
  "plugins": [
    ["@babel/plugin-proposal-decorators", { "legacy": true }],
    ["@babel/plugin-proposal-class-properties", { "loose": true }],
    ["babel-plugin-module-resolver", {
      "alias": {
        "@view": "./src/App/View",
        "@context": "./src/context.js",
        "@controllers": "./src/App/controllers"
      }
    }]
  ]
}